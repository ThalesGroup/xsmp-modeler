{
    "name": "xsmp-modeler",
    "description": "XSMP development framework.",
    "version": "0.0.6",
    "publisher": "ydaveluy",
    "author": "ydaveluy",
    "repository": "https://github.com/ydaveluy/xsmp-modeler",
    "type": "module",
    "license": "MIT",
    "icon": "icons/logo.png",
    "bugs": "https://github.com/ydaveluy/xsmp-modeler/issues",
    "sponsor": {
        "url": "https://github.com/sponsors/ydaveluy"
    },
    "scripts": {
        "clean": "shx rm -rf bin/ out/",
        "build": "tsc -b tsconfig.src.json && node esbuild.mjs",
        "build:clean": "npm run clean && npm run build",
        "watch": "concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.src.json --watch\" \"node esbuild.mjs --watch\"",
        "lint": "eslint src",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch",
        "vscode:prepublish": "npm run clean && npm run build -- --minify",
        "test": "vitest run",
        "coverage": "vitest run --coverage",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "dependencies": {
        "chalk": "~5.3.0",
        "commander": "~12.1.0",
        "langium": "~3.1.3",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1",
        "xmlbuilder2": "^3.1.1"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "~1.67.0",
        "@vitest/coverage-v8": "~2.0.5",
        "@vscode/vsce": "^3.0.0",
        "concurrently": "~8.2.1",
        "esbuild": "~0.23.0",
        "esbuild-plugin-copy": "^2.1.1",
        "eslint": "~9.9.1",
        "langium-cli": "~3.1.1",
        "shx": "~0.3.4",
        "typescript": "~5.5.4",
        "typescript-eslint": "^8.0.1",
        "vitest": "~2.0.5"
    },
    "volta": {
        "node": "18.19.1",
        "npm": "10.2.4"
    },
    "displayName": "xsmp-modeler",
    "engines": {
        "vscode": "^1.67.0",
        "node": ">=18.0.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "xsmpproject",
                "aliases": [
                    "xsmpproject"
                ],
                "extensions": [
                    ".profile",
                    ".tool"
                ],
                "filenames": [
                    "xsmp.project"
                ],
                "configuration": "./xsmpproject-language-configuration.json",
                "icon": {
                    "light": "./icons/xsmpproject.png",
                    "dark": "./icons/xsmpproject.png"
                }
            },
            {
                "id": "xsmpcat",
                "aliases": [
                    "xsmpcat"
                ],
                "extensions": [
                    ".xsmpcat"
                ],
                "configuration": "./xsmpcat-language-configuration.json",
                "icon": {
                    "light": "./icons/xsmp.png",
                    "dark": "./icons/xsmp.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "xsmpproject",
                "scopeName": "source.xsmpproject",
                "path": "syntaxes/xsmpproject.tmLanguage.json"
            },
            {
                "language": "xsmpcat",
                "scopeName": "source.xsmpcat",
                "path": "syntaxes/xsmpcat.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "xsmp.wizard",
                "category": "Xsmp",
                "title": "Create a new project"
            }
        ],
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {
                "textMateRules": [
                    {
                        "scope": "comment.block.documentation.xsmp",
                        "settings": {
                            "foreground": "#3F5FBF"
                        }
                    },
                    {
                        "scope": "comment.block.documentation.tag.xsmp",
                        "settings": {
                            "foreground": "#7F9FBF",
                            "fontStyle": "bold"
                        }
                    }
                ]
            }
        }
    },
    "activationEvents": [
        "onLanguage:xsmpproject",
        "onLanguage:xsmpcat",
		"onStartupFinished"
    ],
    "main": "./out/extension/main.cjs",
    "bin": {
        "xsmpproject-cli": "./bin/cli.js"
    },
    "files": [
        "out/**",
        "syntaxes/**",
        "icons/**",
        "xsmpcat-language-configuration.json",
        "xsmpproject-language-configuration.json",
        "README.md",
        "LICENSE.md"
    ]
}
